#:kivy 1.11.1
<StyledButton@Button>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .5
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 48/255.,48/255.,48/255.,1.
    font_name: 'Roboto'            
    on_press: 
        self.background_color= (173/255. , 216/255. , 230/255.,1)
    on_release:
        self.background_color= (48/255.,48/255.,48/255.,1.)

<ImageButton@Button>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .6
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 48/255.,48/255.,48/255.,1.
    border: 0,0,0,0
    on_press: 
        self.background_color= (173/255. , 216/255. , 230/255.,1)
    on_release:
        self.background_color= (48/255.,48/255.,48/255.,1.)

<StyledLabel@Label>:    
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

<StyledSpinner@Spinner>:
    canvas: 
        Color: 
            rgba: 0,0,0, 1
        Line: 
            width: .5
            rectangle: (self.x, self.y, self.width, self.height) 
    background_normal: ''
    background_color: 70/255. , 70/255. , 70/255.,1
    canvas.before:
        Color:
            rgba: 70/255. , 70/255. , 70/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

    
<StyledCheckBox@CheckBox>: 
    background_normal: ''
    background_color: 48/255. , 48/255. , 48/255.,1
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

<StyledSlider@Slider>:
    background_normal: ''
    background_color: 48/255. , 48/255. , 48/255.,1
    canvas.before:
        Color:
            rgba: 48/255. , 48/255. , 48/255., 1
        Rectangle:
            size: self.size
            pos: self.pos

<FLayer>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1.0 #Will change color later
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows:2
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint:1,0.1
            padding: 0.5
            StyledLabel:
                size_hint: 0.7,1            
                text: "Neurons: "
                font_size: 0.05 * self.height + 0.06 * self.width
            TextInput:
                id: neurons
                multiline: False
                size_hint: 0.3,1
                text: "1"
                font_size: 0.08 * self.height + 0.08 * self.width
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint:1,0.1
            padding: 0.5
            StyledLabel:
                id: activation_fn
                text: "No Activation for First Layer"  
                font_size: 0.04 * self.height + 0.04 * self.width

<Layer>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1.0 #Will change color later
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows:2
        BoxLayout:
            size_hint:1,0.1
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint:1,0.1
            padding: 0.5
            StyledLabel:
                size_hint: 0.7,1            
                text: "Neurons: "
                font_size: 0.05 * self.height + 0.06 * self.width
            TextInput:
                id: neurons
                multiline: False
                size_hint: 0.3,1
                text: "1"
                font_size: 0.08 * self.height + 0.08 * self.width
        BoxLayout:
            size_hint: 1,0.1
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint:1,0.1
            padding: 0.5
            StyledLabel:
                size_hint: 0.7,1
                text : "Activation : "
                font_size: 0.05 * self.height + 0.06 * self.width
            StyledSpinner:
                size_hint: 0.3,1
                id: activation_fn
                text: "sigmoid"                   
                font_size: 0.08 * self.height + 0.08 * self.width
                values: ["sigmoid","relu","elu","selu","tanh","softmax","linear"]       
    
<LayerControl>:
    FLayer:                
    Layer:

<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                #rgba: 0.137, 0.149, 0.161, 1.0 #Will change color later
                rgba: 16/255. , 16/255. , 16/255., 1
                #rgba: 7/255. , 19/255. , 23/255. , 1 
            Rectangle:
                pos: self.pos
                size: self.size
        #1/3 MainScreen
        StackLayout:
            canvas.before:
                Color:
                    rgba: 48/255., 48/255., 48/255., 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos_hint: {"x":0,"y":0.75}
            size_hint: 1,0.25
            StyledButton:
                text: "Readme"
                size_hint: 0.15,0.2
                font_size: 0.06 * self.height + 0.1 * self.width
                on_press:  root.open_browser(tutorial=True)             
            StyledButton:
                text: "Help"
                size_hint: 0.15,0.2
                font_size: 0.06 * self.height + 0.1 * self.width
                on_press:  root.open_browser(help=True)             
            StyledLabel:
                text: "Optimization Technique: "
                font_size: 0.058 * self.height +  0.079 * self.width
                size_hint: 0.15,0.2
            StyledSpinner:
                size_hint: 0.2,0.2
                id: optimizer
                text: "SGD"                   #default value showed
                font_size: 0.04 * self.height +  0.08 * self.width
                values: ["SGD","RMSprop","Adagrad","Adam","Adamax","Nadam","Adadelta"]       #list of values to show
                on_text:
                    root.optimizer=optimizer.text
            StyledLabel:
                text: "Loss Function: "
                font_size: 0.06 * self.height +  0.1 * self.width
                size_hint: 0.15,0.2
            StyledSpinner:
                size_hint: 0.2,0.2
                id: loss_fn
                text: "sparse_categorical_crossentropy"             
                font_size: 0.027 * self.height + 0.054 * self.width     
                values: ["sparse_categorical_crossentropy","binary_crossentropy","categorical_crossentropy","mean_squared_error","mean_absolute_error","huber_loss","cosine_proximity","poisson"]       #list of values to show
                on_text:
                    root.loss_fn=loss_fn.text
            
            StyledButton:
                size_hint: 0.15,0.2
                text: "Add Layer"
                id: add_layer_btn
                font_size: 0.055 * self.height + 0.092 * self.width
                on_press: layer_control.add_layer()
            StyledButton:
                size_hint: 0.15,0.2
                id: remove_layer_btn
                text: "Remove Layer"
                font_size: 0.055 * self.height + 0.092 * self.width
                on_press: layer_control.remove_layer()
            StyledLabel:
                text: "Weights Intialization: "
                size_hint: 0.15,0.2
                font_size: 0.06 * self.height + 0.08 * self.width
            StyledSpinner:
                size_hint: 0.2,0.2
                id: kernal_init
                text: "he_normal"                   #default value showed
                font_size: 0.058 * self.height + 0.086 * self.width
                values: ["he_normal","he_uniform","lecun_normal","lecun_uniform","glorot_normal","glorot_uniform","RandomNormal","RandomUniform","Orthogonal"]       #list of values to show
                on_text:
                    root.kernal_init=kernal_init.text            
            StyledLabel:
                size_hint: 0.095,0.2            
                text: "Learning rate: "
                font_size: 0.11 * self.height + 0.11 * self.width
            TextInput:
                multiline:False
                id: lr
                size_hint: 0.055,0.198            
                id:lr
                text: "0.01"
                font_size: 0.2 * self.height + 0.2 * self.width
                on_text: 
                    root.lr=str(lr.text)
            StyledLabel:
                size_hint: 0.1,0.2            
                font_size: 0.1 * self.height + 0.119 * self.width
                text: "Epochs: "
            StyledLabel:
                size_hint: 0.05,0.2            
                id:epochs
                text: "1"
                font_size: 0.2 * self.height + 0.198 * self.width
            StyledButton:
                size_hint: 0.025,0.2
                text: "+"
                font_size: 0.2 * self.height + 0.2 * self.width
                on_press: 
                    root.change_epoch(Incr=True)
            StyledButton:
                size_hint: 0.025,0.2
                text: "-"
                font_size: 0.2 * self.height + 0.2 * self.width
                on_press: 
                    root.change_epoch(Decr=True)
                    
            ImageButton:
                id:start_btn
                size_hint: 0.1,0.4
                background_normal :'Frontend/imgs/play.png'
                on_release: 
                    root.start()
            ImageButton:
                size_hint: 0.1,0.4
                background_normal:'Frontend/imgs/reset.png'
                on_press: root.reset()
            BoxLayout:
                size_hint: 0.8,0.4
                canvas: 
                    Color: 
                        rgba: 0,0,0, 1
                    Line: 
                        width: .5
                        rectangle: (self.x, self.y, self.width, self.height) 
                padding: 0.5
                StyledLabel:
                    size_hint: 0.05,1
                    text: "" #Dummy label
                    font_size: 0.05 * self.height + 0.078 * self.width
                StyledLabel:
                    size_hint: 0.2,1
                    text: "Batch Normalization"
                    font_size: 0.05 * self.height + 0.078 * self.width
                StyledCheckBox:
                    id:batch_norm
                    size_hint: 0.05,1                
                    active: True
                    on_active: root.batch_normalization=self.active
                StyledLabel:
                    size_hint: 0.2,1
                    text: "Use GPU"
                    font_size: 0.05 * self.height + 0.078 * self.width
                StyledCheckBox:
                    size_hint: 0.05,1                
                    active: True
                    on_active: root.gpu_use=self.active
                StyledLabel:
                    size_hint: 0.2,1
                    text: "Shuffle Data"
                    font_size: 0.05 * self.height + 0.078 * self.width
                StyledCheckBox: 
                    size_hint: 0.05,1                
                    active: True
                    on_active: root.shuffle_data=self.active
            StyledLabel:
                canvas: 
                    Color: 
                        rgba: 0,0,0, 1
                    Line: 
                        width: .5
                        rectangle: (self.x, self.y, self.width, self.height) 
                id:stats
                size_hint: 1,0.2
                text: "Training Stats: "
                font_size: 0.01 *self.height + 0.016 * self.width

        #2/3 MainScreen ---> DONE Don't Touch            
        LayerControl:
            id: layer_control
            pos_hint: {"x":0,"y":.65}
            size_hint:1,0.1

        NetworkDrawing:
            id: network_drawing
            size_hint:1,0.5
            pos_hint: {"x":0,"y":.15}

        #3/3 MainScreen ---> Done Don't Touch
        GridLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1.0 #Will change color later
                Rectangle:
                    pos: self.pos
                    size: self.size
            

            size_hint: 1,0.15 
            pos_hint: {"x":0,"y":0}
            cols: 3
            StyledButton:
                text: "Save Current Model"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_press: root.save_model()
            StyledButton:
                text: "Visualize Training"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_release: root.show_img(Train=True)
            StyledButton:
                text: "Browse training data(*.csv)"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_release: root.get_csv_file(Train=True)
            StyledButton:
                text: "Load Existing Model"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_release: root.get_h5_file()
            StyledButton:
                text: "Testing Stats"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_release: root.show_img(Test=True)
            StyledButton:
                text: "Browse testing data(*.csv)"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_release: root.get_csv_file(Test=True)
            StyledButton:
                text: "Report a Bug"
                font_size: 0.04 * self.height + 0.048 * self.width
                on_press: root.open_browser(bug=True)
            BoxLayout:  
                size_hint:1,0.1
                canvas: 
                    Color: 
                        rgba: 0,0,0, 1
                    Line: 
                        width: .5
                        rectangle: (self.x, self.y, self.width, self.height) 
                padding: 0.5
                StyledLabel:    
                    size_hint: 0.32,1
                    text:"Label at start"
                    font_size: 0.098 * self.height + 0.098 * self.width
                StyledCheckBox:
                    size_hint: 0.08,1
                    id: label_start
                    active: True
                    on_active: root.label_at_start=self.active
                StyledLabel:
                    size_hint: 0.49,1
                    text: "Smart Preprocess Data"
                    font_size: 0.06 * self.height + 0.08 * self.width
                StyledCheckBox:
                    id: smart_preprocess
                    size_hint: 0.08,1
                    active: True
                    on_active: root.smart_preprocess=self.active       
            BoxLayout:
                canvas: 
                    Color: 
                        rgba: 0,0,0, 1
                    Line: 
                        width: .5
                        rectangle: (self.x, self.y, self.width, self.height) 
                size_hint:1,0.1
                
                StyledLabel:
                    size_hint: 0.4,1
                    text: "Validation Split: "
                    font_size: 0.06 * self.height + 0.098 * self.width
                StyledSlider:
                    size_hint: 0.5,1
                    id: validation_split
                    min: 0
                    max: 90
                    step: 10
                    orientation: 'horizontal'
                    on_value: 
                        root.validation_split=self.value 
                StyledLabel:
                    size_hint: 0.1,1
                    text: str(validation_split.value)+str("%")
                    font_size: 0.097 * self.height + 0.38 * self.width