<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.137, 0.149, 0.161, 1.0 #Will change color later
            Rectangle:
                pos: self.pos
                size: self.size
        #1/3 MainScreen
        FloatLayout:
            pos_hint: {"x":0,"y":0.7}
            size_hint:1,0.3
            Button:
                text: "Readme"
                pos_hint: {"x":0.,"y":.8}
                size_hint: 0.2,0.2
                on_press:  root.open_tutorial()             
            Button:
                text: "Help"
                pos_hint: {"x":0.2,"y":.8}
                size_hint: 0.2,0.2
                on_press:  root.open_help()             
            ToggleButton:
                pos_hint: {"x":0,"y":.35}
                border: 0,0,0,0
                size_hint: 0.1,0.3
                background_color:(0.137, 0.149, 0.161, 1.0)
                background_normal:'Frontend/imgs/play.png'
                background_down: 'Frontend/imgs/pause.png'
            Button:
                pos_hint: {"x":0.1,"y":.35}
                border: 0,0,0,0
                size_hint: 0.1,0.3
                background_normal:'Frontend/imgs/reset.png'
        #2/3 MainScreen
        BoxLayout:
            pos_hint: {"x":0,"y":.15}
            size_hint:1,0.55
            Button:
                text:"Animation"
        #3/3 MainScreen ---> Done
        GridLayout:
            size_hint: 1,0.15 
            cols: 3
            Button:
                text: "Save Current Model"
            Button:
                text: "Visualize Training"
            Button:
                text: "Browse training data(*.csv)"
                on_release: root.get_file(Train=True)
            Button:
                text: "Load Existing Model"
            Button:
                text: "Visualize Testing"
            Button:
                text: "Browse testing data(*.csv)"
                on_release: root.get_file(Test=True)
            Button:
                text: "About"
            Button:
                text: "Report a Bug"
                on_press: root.report_bug()
            BoxLayout:
                Label:
                    size_hint: 0.4,1
                    text: "Validation Split: "
                Slider:
                    size_hint: 0.5,1
                    id: slider
                    min: 0
                    max: 90
                    step: 10
                    orientation: 'horizontal'
                Label:
                    size_hint: 0.1,1
                    text: str(slider.value)+str("%")
